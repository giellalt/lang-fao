####### Xerox build rules: #######
.regex.xfst:
	$(AM_V_GEN)$(PRINTF) "read regex @re\"$<\";\nsave stack $@\nquit\n" |\
		$(XFST) $(XFSTFLAGS)

%.xfst: $(GTCORE)/gtshared/src/filters/%.regex
	$(AM_V_GEN)$(PRINTF) "read regex @re\"$<\";\nsave stack $@\nquit\n" |\
		$(XFST) $(XFSTFLAGS)

