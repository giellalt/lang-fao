TAG_EXTRACTION_FST=analyser-mt-gt-desc

# Convert GT-tags to Apertium-tags:
tagsets/apertiumtags.txt: tagsets/gttags.txt
	$(AM_V_GEN)tr -d '+' < $< \
		| tr '/[:upper:]' '_[:lower:]' \
		| awk '{print "%<"$$0"%>"}' > $@

# Generate relabel file for replacing Giella tags with Apertium tags:
tagsets/apertium.relabel: tagsets/gttags.txt \
						  tagsets/apertiumtags.txt
	$(AM_V_GEN)paste $^ | tr -d '%' > $@



