####### Source file and target defs: ########
GT_FSTSPELLER_FILTER_SRCS=

# These will be included in the distribution:
EXTRA_DIST+=$(GT_FSTSPELLER_FILTER_SRCS) \
		   $(GT_LOCAL_FSTSPELLER_FILTER_SRCS)

GT_FSTSPELLER_FILTER_ALL_SRCS=\
        $(GT_FSTSPELLER_FILTER_SRCS) \
        $(GT_LOCAL_FSTSPELLER_FILTER_SRCS) \
        $(GIELLA_LOCAL_COPY_FILTER_SRCS) \
        $(GENERATED_REGEXES)

# This is what we build:
noinst_DATA+=$(GT_FSTSPELLER_FILTER_TARGETS)

# Automatically detect the targets to be built:
GT_FSTSPELLER_FILTER_TARGETS=

if WANT_SPELLERS
if CAN_HFST
GT_FSTSPELLER_FILTER_TARGETS+=\
        $(patsubst %.regex,%.hfst,$(GT_FSTSPELLER_FILTER_ALL_SRCS))
endif # CAN_HFST

if CAN_XFST
GT_FSTSPELLER_FILTER_TARGETS+=\
        $(patsubst %.regex,%.xfst,$(GT_FSTSPELLER_FILTER_ALL_SRCS))
endif # CAN_XFST

if CAN_FOMA
GT_FSTSPELLER_FILTER_TARGETS+=\
        $(patsubst %.regex,%.foma,$(GT_FSTSPELLER_FILTER_ALL_SRCS))
endif # CAN_FOMA
endif # WANT_SPELLERS

####### Copy regex files from the Giella core if not found locally: ########
%.regex: $(GIELLA_SHARED)/all_langs/tools/spellcheckers/fstbased/filters/%.regex
	$(AM_V_CP)cp -f $< $@

%.regex: $(GIELLA_SHARED)/all_langs/src/filters/%.regex
	$(AM_V_CP)cp -f $< $@

####### ... OR from the src/filters/ dir
%.regex: $(top_srcdir)/src/filters/%.regex
	$(AM_V_CP)cp -f $< $@
