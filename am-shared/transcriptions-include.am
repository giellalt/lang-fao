####### Source file defs: ########

#! @param GT_TRANSCRIPTIONS_SRCS required, the source files for orthographic
#!        transcriptions.

EXTRA_DIST=$(GT_TRANSCRIPTIONS_SRCS)

####### Automake targets: ########

# The transducers we build and don't distribute depend on the configuration:
GT_TRANSCRIPTORS=
if CAN_HFST
GT_TRANSCRIPTORS+=clock.hfst date.hfst numbers.hfst
endif
if CAN_XFST
GT_TRANSCRIPTORS+=clock.xfst date.xfst numbers.xfst
endif
noinst_DATA=$(GT_TRANSCRIPTORS)

####### HFST build rules: ########

# lexical transducer building rules:
# for HFST:
%.hfst: %.lexc
	$(AM_V_GEN)$(HFST_LEXC) -f foma -o $@.foma $^
	$(AM_V_GEN)$(HFST_FST2FST) -f openfst-tropical -i $@.foma -o $@
	$(AM_V_GEN)rm -f $@.foma

####### Xerox build rules: #######

%.xfst: %.lexc
	$(AM_V_GEN)$(PRINTF) \
		"compile-source $^\nsource-to-result\nsave-source $@\nquit\n" | $(LEXC)

####### Other targets: ###########
clean-local:
	-rm -f *.hfst *.xfst

