####### HFST build rules: ########
# hfst-twolc should resolve by default (just like the Xerox tool):
HFSTTWOLFLAGS=--resolve

.twolc.hfst:
	$(AM_V_HTWOLC)"$(HFST_TWOLC)" $(MORE_VERBOSITY) \
			$(HFSTFLAGS) $(HFSTTWOLCFLAGS) $(HFST_FORMAT) -i $< -o $@

####### Xerox build rules: #######
.twolc.xfst:
	$(AM_V_TWOLC)$(PRINTF) "read-grammar $<\ncompile\nsave-binary $@\nquit\n" \
		| "$(TWOLC)" $(VERBOSITY)

