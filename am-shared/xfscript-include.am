####### HFST build rules: ########
%.hfst: %.xfscript
	$(AM_V_HXFST)(cat $< ; echo "save stack $@"; echo "quit") \
		| $(HFST_XFST) -p $(VERBOSITY)

####### Xerox build rules: #######
%.xfst: %.xfscript
	$(AM_V_XFST)$(XFST) $(VERBOSITY) -l $< -e "save stack $@" -stop

