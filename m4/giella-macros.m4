AS_IF([test x$with_shared_$1 != xfalse], [
    gt_SHARED_$1=$with_shared_$1
    ], [
    AS_IF([test -d "$THIS_TOP_SRC_DIR"/../$2 ], [
        gt_SHARED_$1="$THIS_TOP_SRC_DIR"/../$2
