AC_DEFUN([gt_USE_SHARED],
[
THIS_TOP_SRC_DIR=$BUILD_DIR_PATH/$MYSRCDIR
AC_ARG_WITH([shared-$1],
            [AS_HELP_STRING([--with-shared-$1=DIRECTORY],
                            [search shared-$1 in DIRECTORY @<:@default=../$2@:>@])],
