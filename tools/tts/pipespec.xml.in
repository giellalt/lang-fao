<pipespec language="@GLANG2@"
          developer="Divvun"
          copyright=""
          version="0.1"
          contact="Divvun feedback@divvun.no"
          depversions="vislcg3 >=1.1.2.12361
                       hfst >= 3.13.0
                       divvun-gramcheck >= 0.2.0">

  <pipeline name="@GLANG@-normaliser"
            language="@GLANG2@"
            type="Analyser">
    <tokenize><tokenizer n="tokeniser-disamb-gt-desc.pmhfst"/></tokenize>
    <blanktag>
      <blanktagger n="analyser-gt-whitespace.hfst"/>
    </blanktag>
    <cg><grammar n="valency.bin"/></cg>
    <cg><grammar n="mwe-dis.bin"/></cg>
    <mwesplit/>
    <cg><grammar n="disambiguator.bin"/></cg>
    <cg><grammar n="functions.bin"/></cg>
    <cg><grammar n="dependency.bin"/></cg>
    <normalise>
      <analyser n="analyser-gt-norm.hfstol"/>
      <generator n="generator-gt-norm.hfstol"/>
      <normaliser s="ABBR"   n="transcriptor-abbrevs2text.filtered.lookup.hfstol"/>
      <normaliser s="Arab"   n="transcriptor-numbers-digit2text.filtered.lookup.hfstol"/>
      <normaliser s="Roman"  n="transcriptor-numbers-digit2text.filtered.lookup.hfstol"/>
      <normaliser s="Emoji"  n="transcriptor-emoji2text.filtered.lookup.hfstol"/>
      <normaliser s="Sem/Date" n="transcriptor-date-digit2text.filtered.lookup.hfstol"/>
      <normaliser s="Sem/Year" n="transcriptor-date-digit2text.filtered.lookup.hfstol"/>
      <normaliser s="Sem/Time-clock" n="transcriptor-clock-digit2text.filtered.lookup.hfstol"/>
    </normalise>
    <!-- Add expansion of abbr expressions, digits etc -->
    <!-- Add conversion to IPA as the last step:
     multilingual based on language tags in the analysis -->
  </pipeline>

</pipespec>
